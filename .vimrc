inoremap jk <ESC> 

let mapleader = "\<Space>"

filetype plugin indent on

syntax on
set background=dark
set encoding=utf-8

set number
set ruler
set spell spelllang=en_us

" Spaces instead of tabs
set expandtab

" Smart Tabs
set smarttab

" 1 tab = 4 spaces
set shiftwidth=4
set tabstop=4

set ai
set si

" wrap lines
set wrap

" backup off
set nobackup
set nowb
set noswapfile
